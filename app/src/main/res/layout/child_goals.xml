<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:backgroundTint="#303E65"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ProgressBar
            android:id="@+id/goal_child_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminate="false"
            android:max="100"
            android:min="0"
            android:progress="75"
            android:progressDrawable="@drawable/circular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/goal_child_progress_percentage"
            android:layout_width="50dp"
            android:layout_height="50dp"


            android:gravity="center"
            android:text="75%"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/goal_child_progressBar"
            app:layout_constraintEnd_toEndOf="@+id/goal_child_progressBar"
            app:layout_constraintStart_toStartOf="@+id/goal_child_progressBar"
            app:layout_constraintTop_toTopOf="@+id/goal_child_progressBar" />


        <TextView
            android:id="@+id/goal_child_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_marginStart="16dp"
            android:gravity="start"
            android:text="Buy a new PC"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/goal_child_label_due_date"
            app:layout_constraintStart_toEndOf="@+id/goal_child_progressBar"
            app:layout_constraintTop_toTopOf="@+id/goal_child_progressBar" />

        <TextView
            android:id="@+id/goal_child_acquired_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_marginTop="8dp"
            android:gravity="end"
            android:text="7500"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/goal_child_progressBar"
            app:layout_constraintStart_toStartOf="@+id/goal_child_title"
            app:layout_constraintTop_toBottomOf="@+id/goal_child_title"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/goal_child_slash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_marginStart="4dp"
            android:gravity="end"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/goal_child_acquired_money"
            app:layout_constraintStart_toEndOf="@+id/goal_child_acquired_money"
            app:layout_constraintTop_toTopOf="@+id/goal_child_acquired_money"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/goal_child_required_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="10000"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/goal_child_slash"
            app:layout_constraintStart_toEndOf="@+id/goal_child_slash"
            app:layout_constraintTop_toTopOf="@+id/goal_child_slash"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/goal_child_label_due_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="Due Date"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/goal_child_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/goal_child_title"
            app:layout_constraintTop_toTopOf="@+id/goal_child_title" />

        <TextView
            android:id="@+id/goal_child_due_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:gravity="center"
            android:text="30-2-2021"
            android:textColor="#EC6194"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/goal_child_required_money"
            app:layout_constraintEnd_toEndOf="@+id/goal_child_label_due_date"
            app:layout_constraintStart_toStartOf="@+id/goal_child_label_due_date"
            app:layout_constraintTop_toTopOf="@+id/goal_child_required_money" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
